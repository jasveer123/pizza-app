        {{#each food}}
        <div class="card">
            <img id="menu_img" src="/img/{{image}}" width="200px" height="133px" alt="card_img">
            <div id="div1">
                <h4 id="na">{{name}}</h4>
                <span id="combo">{{size}}</span>
                <div id="div2">
                    <span id="price">â‚¹ {{price}}</span>
                    <button  data-pizza='pizza' class="button_card">
